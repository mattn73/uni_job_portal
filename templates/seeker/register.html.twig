{% extends 'base.html.twig' %}

{% block title %}Register !{% endblock %}

{% block body %}

    {{ form_start(form, {'attr': {'id': 'registration-form', 'novalidate':'true'}}) }}

    <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_widget(form.title) }}

    </div>
    <div class="form-group">
        {{ form_label(form.lastName) }}
        {{ form_widget(form.lastName) }}


    </div>
    <div class="form-group">
        {{ form_label(form.firstname) }}
        {{ form_widget(form.firstname) }}

    </div>
    <div class="form-group">
        {{ form_label(form.address) }}
        {{ form_widget(form.address) }}

    </div>
    <div class="form-group">
        {{ form_label(form.contact) }}
        {{ form_widget(form.contact) }}
    </div>
    <div class="form-group">
        {{ form_label(form.dob) }}
        {{ form_widget(form.dob) }}
        {{- form_errors(form.dob) -}}

    </div>

    </div>

    <div class="wrap-email clearfix">
        <h3>Email et mot de passe</h3>
        <div class="form-group email">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            {{- form_errors(form.email) -}}
        </div>

        <div class="form-group">
            {{ form_label(form.password.children['first']) }}
            {{ form_widget(form.password.children['first']) }}
            {{ form_errors(form.password.children['first']) }}
        </div>

        <div class="form-group">
            {{ form_label(form.password.children['second']) }}
            {{ form_widget(form.password.children['second']) }}
            {{ form_errors(form.password.children['second']) }}
        </div>

    </div>


    {{ form_end(form) }}

{% endblock %}
