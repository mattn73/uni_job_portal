<div class="container " id="skill-container">
    <h2>Skills </h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
        </tr>
        </thead>
        <tbody>
        {% if skills is empty %}
            <tr>
                <td>Non Skill</td>
            </tr>
        {% endif %}

        {% for skill in skills %}
            <tr>
                <td>{{ skill.name }}
                    <button type="button" id="{{ skill.id }}"class="btn btn-labeled btn-danger delete-skill">
                        <span class="btn-label"><i class="glyphicon glyphicon-trash"></i></span>Trash</button>
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td>
                {{ form_start(skillForm, {'attr': {'id': 'skill-add-form', 'novalidate':'true'}}) }}
                {{ form_errors(skillForm.name) }}
                <div class="input-group">
                    {{ form_widget(skillForm.name) }}
                    <div class="input-group-append">
                        {{ form_widget(skillForm.submit) }}
                    </div>
                </div>
                {{ form_end(skillForm) }}
            </td>
        </tr>

        </tbody>
    </table>
</div>
